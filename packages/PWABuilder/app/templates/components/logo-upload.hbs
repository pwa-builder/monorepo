{{input class='pwa-generator-input' value=logoUrl type="url" placeholder="http://example.com/image.png or /images/example.png"}}

<div class="button-holder icons">
  {{upload-image action="addUploadedImage"}}
  <button class="pwa-button pwa-button--text pwa-button--right" {{action 'addLogo'}} {{bind-attr disabled="isAddDisabled"}}>
    {{hasLogoUrl}} Add Icon
  </button>

  {{#if showAlert}}
  <p class="pwa-generator-error">
      <i class="fa fa-exclamation"></i> {{imageAlert}}
  </p>
  {{/if}}
</div>

{{#if logos}}
  <div class="pure-g pwa-generator-table">
    <div class="pure-u-10-24 pwa-generator-tableh">Preview</div>
    <div class="pure-u-8-24 pwa-generator-tableh">Size</div>
    <div class="pure-u-1-8"></div>
    <div class="pure-u-1-8"></div>

    {{#each logo in logos}}
      <div class="pure-u-10-24 pwa-generator-tablec">
        <a href="{{logo.imgSrc}}" target="_blank">
          {{icon-display src=logo.src base=baseUrl}}
        </a>
      </div>
      <div class="pure-u-8-24 pwa-generator-tablec">
        {{logo.sizes}}
      </div>
      <div class="pure-u-1-8 pwa-generator-tablec">
        {{#if logo.generated}}
          {{fa-icon "magic" title="Autogenerated icon"}}
        {{/if}}
      </div>
      <div class="pure-u-1-8 pwa-generator-tablec pwa-generator-tablec--right">
        <span class="pwa-generator-close" {{action 'removeLogo' logo}}>{{fa-icon "times"}}</span>
      </div>
    {{/each}}
  </div>
{{/if}}